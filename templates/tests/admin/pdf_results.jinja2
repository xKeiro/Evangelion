{% extends "default.jinja2" %}
{% block content %}
    <div class="card">
        <div class="container">
            <form action="{{ url_for('manage_pdf') }}" method="get">
                <label for="username">{{ text["Felhasználónév"] }}</label>
                <input id="username" type="text" name="username" placeholder="{{ text["Felhasználónév"] }}"><br>
                <label for="email">{{ text["E-mail"] }}</label>
                <input id="email" type="text" name="email" placeholder="{{ text["E-mail"] }}"><br>
                <button type="submit">{{ text["PDF letöltés"] }}</button>
            </form>
        </div>
    </div>
{% endblock %}