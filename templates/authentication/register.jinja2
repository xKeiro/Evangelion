{% extends "default.jinja2" %}
{% block content %}
	<main class="container">
		<div class="d-flex flex-column text-center align-items-center">
			{% if matching_username %}
				<div class="alert wy-alert-danger">
					<strong>{{ text["A felhasználónév foglalt!"] }}</strong> {{ text["Kérlek válassz egy másikat!"] }}
				</div>
			{% endif %}
			<form action="{{ url_for("register") }}" method="POST">
				<div class="form-group mt-5">
					<label class="form-label fw-bold mb-1" for="username">{{ text["Felhasználónév"] }}:</label>
					<input type="text" name="username" class="form-control" placeholder="{{ text["Felhasználónév"] }}" required>

					<label class="color-primary fw-bold mb-1" for="password">{{ text["Jelszó"] }}: </label>
					<input type="password" name="password" class="form-control" placeholder="{{ text["Jelszó"] }}" required>

					<label class="color-primary fw-bold mb-1" for="email">{{ text["E-mail"] }}: </label>
					<input type="email" name="email" class="form-control" placeholder="{{ text["E-mail"] }}" required>

					<label class="color-primary fw-bold mb-1" for="last_name">{{ text["Családnév"] }}: </label>
					<input type="text" name="last_name" class="form-control" placeholder="{{ text["Családnév"] }}" required>

					<label class="color-primary fw-bold mb-1" for="first_name">{{ text["Keresztnév"] }}: </label>
					<input type="text" name="first_name" class="form-control" placeholder="{{ text["Keresztnév"] }}" required>

					<label class="color-primary fw-bold mb-1" for="birthday">{{ text["Születési idő"] }}: </label>
					<input type="date" name="birthday" class="form-control" required>
				</div>
				<div><input type="submit" value="{{ text["Regisztráció"] }}" class="btn btn-primary mt-3"></div>
			</form>
		</div>
	</main>
{% endblock %}
