{% macro test_card(dict,text) %}
    <article class="tests-card card col-lg-2">
        <header class="tests-card-header card-header">
            {{ dict.title }}
        </header>
        <div class="tests-card-body card-body">
            <ul class="list-group list-group-flush">
                {% for key,value in dict.items() %}
                    {% if 'test' in key %}
                        <li class="list-group-item">
                            <div class="test-container">
                                <header class="test-title">
                                {{ value["title"] }}
                                </header>
                                <div class="test-description">
                                {{ value["description"] }}
                                </div>
                            <footer class="test-button-container">
                                <a href="/test/{{ value["url"] }}" class="test-button-link test-button" type="button" aria-label="{{ [text['TovÃ¡bb a'], dict.title, value['title'], text['tesztre']] | join(' ') }}">To the test</a>
                            </footer>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </article>
{% endmacro %}